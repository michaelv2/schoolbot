# Schoology
SCHOOLOGY_DOMAIN=app.schoology.com
# Child/student ID (required for parent accounts to access grades)
SCHOOLOGY_CHILD_ID=

# SMTP for sending email reports
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=you@gmail.com
SMTP_PASSWORD=your-app-password
# EMAIL_TO: single recipient or comma-separated list
# Examples:
#   EMAIL_TO=parent@example.com
#   EMAIL_TO=parent@example.com,student@example.com,teacher@example.com
EMAIL_TO=parent@example.com
EMAIL_FROM=you@gmail.com

# Thresholds
GRADE_WARN_THRESHOLD=80

# Test Prep (opt-in: generates study materials for upcoming tests using Claude)
ENABLE_TEST_PREP=false
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-sonnet-4-20250514
